citHeader("To cite cpsurvsim in publications use:")

citEntry(entry = "Manual",
         author = personList(as.person("Camille Hochheimer")),
         title = "{cpsurvsim}: Simulating Survival Data from Change-Point Hazard Distributions",
         year = "2019",
         version = "1.1.0",
         url = "http://github.com/camillejo/cpsurvsim",

         textVersion = paste("Camille Hochheimer (2019).",
                             "cpsurvsim: Simulating Survival Data from Change-Point Hazard Distributions",
                             "R package version 1.1.0.",
                             "URL http://github.com/camillejo/cpsurvsim")
)
